
<div class = "container mx-auto p-3">
  <h1>Tasks</h1>
  <ul class="list-unstyled p-0 my-5">
    <% @tasks.each do |task| %>
    <% if task.completed === true%>
      <a href = "tasks/<%=task["id"]%>" class = "text-decoration-none text-white">
      <li class = "bg-primary p-3 my-1 rounded d-flex justify-content-between">
      <div><i class="fa-solid fa-circle-check fa-fw"></i><%= task.title %></div><div><%=task.details %></div></li>
      </a>
      <% else%>
      <a href = "tasks/<%=task["id"]%>" class = "text-decoration-none text-white">
      <li class = "bg-primary p-3 my-1 rounded d-flex justify-content-between">
      <div><i class="fa-regular fa-circle fa-fw"></i><%= task.title %></div><div><%=task.details %></div></li>
      </a>
      <%end%>
    <%end%>
  </ul>
  <!--<h2><%= link_to "Create a New Task", new_task_path(@task), class: "text-decoration-none text-white bg-primary rounded p-3"%>-->
  
  <div class = "my-5">
  <%= form_for(Task.new) do |f| %>
    <div class="card">
      <div class ="card-body">
        <div class ="mb-3">
        <%= f.label :title, {class: "form-label"} %>
        <%= f.text_field :title, {class: "form-control"}%>
        </div>
        <div class = "mb-3">
        <%= f.label :details, {class: "form-label"} %>
        <%= f.text_field :details, {class: "form-control"}  %>
        </div>
        <%= f.submit "Create New Task", class: "btn btn-primary"%>
      </div>
    </div>
<% end %>
</div>